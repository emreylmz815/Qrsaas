<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - KuaceMenu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="position-relative">
        <div class="position-absolute top-0 start-50 translate-middle-x w-100 px-3" style="max-width: 1140px;">
            <nav class="navbar navbar-expand-lg navbar-light bg-white bg-opacity-75 text-dark mt-3">
                <div class="container-fluid px-0">
                    <a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-qr-code-scan me-2 text-primary"></i>KuaceMenu
                    </a>
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü aç">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto align-items-lg-center gap-lg-1">
                            <li class="nav-item"><a class="nav-link text-dark fw-medium" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                            <li class="nav-item"><a class="nav-link text-dark fw-medium" asp-controller="Tenants" asp-action="Create">İşletme Oluştur</a></li>
                            <li class="nav-item"><a class="nav-link text-dark fw-medium" asp-controller="Panel" asp-action="Index">Panel</a></li>
                        </ul>
                        <ul class="navbar-nav align-items-lg-center gap-2">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item d-flex align-items-center gap-2 text-dark">
                                    <span class="rounded-circle bg-primary bg-opacity-10 text-primary d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-fill"></i>
                                    </span>
                                    <span class="fw-semibold">@User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-glass btn-sm px-3">Çıkış</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="btn btn-outline-glass btn-sm px-4" asp-controller="Account" asp-action="Login">Giriş</a></li>
                                <li class="nav-item"><a class="btn primary-gradient btn-sm px-4" asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="container main-container">
        @if (ViewData["Tenant"] is Tenant tenant)
        {
            <div class="tenant-banner">
                <strong>@tenant.Name</strong> &mdash; Alt alan adı: <code>@tenant.Slug</code>
                <span class="badge bg-@GetStatusClass(tenant.SubscriptionStatus) ms-2">@tenant.SubscriptionStatus</span>
            </div>
        }
        <main role="main" class="pb-3">
            @if (TempData.ContainsKey("Success"))
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-5 py-4">
        <div class="container">
            <div class="row align-items-center gy-3">
                <div class="col-md-6 text-md-start text-center">
                    <span class="fw-semibold">&copy; @DateTime.Now.Year KuaceMenu</span>
                    <span class="d-block d-md-inline text-white-50">QR Menü SaaS platformu</span>
                </div>
                <div class="col-md-6 text-md-end text-center">
                    <a asp-controller="Home" asp-action="Index" class="me-md-3 me-2">Ana Sayfa</a>
                    <a asp-controller="Tenants" asp-action="Create" class="me-md-3 me-2">İşletme Oluştur</a>
                    <a href="mailto:destek@kuacemenu.com">destek@kuacemenu.com</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@functions {
    private string GetStatusClass(SubscriptionStatus status) => status switch
    {
        SubscriptionStatus.Active => "success",
        SubscriptionStatus.PastDue => "warning",
        _ => "secondary"
    };
}
