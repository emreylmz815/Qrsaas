@model Tenant
@{
    ViewData["Title"] = "QR Oluştur";
    var targetUrl = ViewData["TargetUrl"]?.ToString();
}
<h1>QR Oluştur</h1>
<p class="text-muted">QR kodu menü adresinize yönlendirir: <strong>@targetUrl</strong></p>
<div class="btn-group mb-4" role="group">
    <a asp-action="DownloadPng" class="btn btn-primary"><i class="bi bi-image"></i> PNG indir</a>
    <a asp-action="DownloadPdf" class="btn btn-outline-primary"><i class="bi bi-file-earmark-pdf"></i> PDF indir</a>
</div>
<div class="alert alert-info">
    QR kodunu baskı için PDF versiyonunu kullanabilirsiniz.
</div>
