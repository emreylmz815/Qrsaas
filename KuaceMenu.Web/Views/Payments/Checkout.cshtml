@model Tenant
@{
    ViewData["Title"] = "Ödeme";
    var checkoutHtml = (string?)ViewData["CheckoutHtml"] ?? "";
    var token = (string?)ViewData["Token"] ?? "";
}
<h1>Yıllık Abonelik Ödemesi</h1>
<p class="text-muted">Ödeme sağlayıcısı Iyzico üzerinden gerçekleştirilecektir. Sandbox anahtarları ile test edebilirsiniz.</p>
<div class="alert alert-info">
    <strong>@Model.Name</strong> için abonelik ödemesi yapıyorsunuz. İşlem başarıyla tamamlandığında abonelik süreniz 1 yıl uzatılır.
</div>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Checkout Formu</h5>
        <div>@Html.Raw(checkoutHtml)</div>
        <form asp-action="SimulateSuccess" method="post" class="mt-3">
            <input type="hidden" name="token" value="@token" />
            <button type="submit" class="btn btn-success">Sandbox Başarılı Ödeme</button>
        </form>
    </div>
</div>
