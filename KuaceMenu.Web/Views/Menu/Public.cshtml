@model PublicMenuViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Tenant.Name + " Menüsü";
}
<div class="text-center mb-4">
    @if (!string.IsNullOrEmpty(Model.Tenant.LogoPath))
    {
        <img src="@Model.Tenant.LogoPath" alt="@Model.Tenant.Name" class="img-fluid" style="max-height:120px;" />
    }
    <h1 class="mt-3">@Model.Tenant.Name</h1>
    <p class="text-muted">@Model.Tenant.Address</p>
    <p class="text-muted"><i class="bi bi-telephone"></i> @Model.Tenant.ContactPhone</p>
</div>
<div class="row g-3">
    @foreach (var category in Model.Categories)
    {
        <div class="col-12">
            <h3 class="border-bottom pb-2">@category.Name</h3>
            <div class="row row-cols-1 row-cols-md-2 g-3">
                @foreach (var item in category.Items.Where(i => i.IsActive))
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(item.PhotoPath))
                            {
                                <img src="@item.PhotoPath" class="card-img-top" alt="@item.Name" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                            <div class="card-footer text-end fw-bold">@item.Price.ToString("C")</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
